.my-page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  box-sizing: border-box;
  padding: 40rpx 32rpx calc(64rpx + env(safe-area-inset-bottom));
}

.profile-card {
  background: linear-gradient(135deg, #0052d9 0%, #3385ff 100%);
  padding: 48rpx 40rpx;
  border-radius: 32rpx;
  color: #ffffff;
  box-shadow: 0 24rpx 64rpx rgba(0, 82, 217, 0.25);
}

.profile-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
}

.profile-main {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.profile-avatar {
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 600;
}

.profile-location {
  font-size: 26rpx;
  opacity: 0.85;
}

.profile-meta {
  font-size: 24rpx;
  opacity: 0.7;
}

.section-card {
  margin-top: 32rpx;
}

.section-card:first-child {
  margin-top: 0;
}

.section-card > .t-grid {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx 0;
  box-shadow: 0 16rpx 48rpx rgba(15, 35, 95, 0.06);
}

.content-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 35, 95, 0.06);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 0;
}

.grid-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 82, 217, 0.08);
}

.grid-icon-warning {
  background: rgba(237, 123, 47, 0.12);
}

.grid-icon-success {
  background: rgba(43, 164, 113, 0.12);
}

.grid-icon-default {
  background: rgba(71, 83, 102, 0.1);
}

.grid-text {
  font-size: 24rpx;
  color: #4e5969;
}

.grid-count {
  font-size: 28rpx;
  font-weight: 600;
}

.grid-count-brand {
  color: #0052d9;
}

.grid-count-warning {
  color: #ed7b2f;
}

.grid-count-success {
  color: #2ba471;
}

.grid-count-default {
  color: #4e5969;
}

.t-card.section-card {
  margin-top: 32rpx;
  padding: 0;
}

.card-block {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}

.card-title-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d2129;
}

.card-desc {
  font-size: 24rpx;
  color: #86909c;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #4e5969;
}

.card-meta t-icon {
  color: #0052d9;
}

.action-row {
  display: flex;
  gap: 16rpx;
}

.publish-row {
  display: flex;
  gap: 24rpx;
}

.publish-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: rgba(0, 82, 217, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #0052d9;
}

.publish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.publish-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d2129;
}

.panel-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.panel-card {
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background: #f5f7fa;
}

.panel-card-brand {
  background: linear-gradient(135deg, rgba(0, 82, 217, 0.1), rgba(51, 133, 255, 0.15));
}

.panel-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d2129;
}

.panel-meta {
  font-size: 24rpx;
  color: #4e5969;
}

.panel-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #0052d9;
}

.panel-action t-icon {
  font-size: 28rpx;
}

.t-cell-group {
  --td-cell-bg-color: #ffffff;
  border-radius: 24rpx;
}

.t-cell {
  font-size: 26rpx;
}

.t-cell + .t-cell {
  border-top: 1rpx solid #f0f2f5;
}

.t-cell__description {
  color: #86909c;
}
