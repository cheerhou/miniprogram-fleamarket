.page {
  min-height: 100vh;
  background: #f6f6f6;
  box-sizing: border-box;
}

.item-list {
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
  padding: 24rpx;
}

.item-card {
  background: #fff;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-card:first-child {
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.item-card:last-child {
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  border-bottom: none;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-price {
  font-size: 32rpx;
  color: #fa4126;
  font-weight: bold;
  margin: 8rpx 0;
}

.item-meta {
  font-size: 24rpx;
  color: #999;
  display: flex;
  gap: 16rpx;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}
