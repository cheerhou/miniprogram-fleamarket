/**search.wxss**/
page {
  background: linear-gradient(180deg, #ecf3ff 0%, #f7f9fc 60%, #eef1f7 100%);
  height: 100%;
}

.page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

/* 自定义导航栏 */
.custom-navbar {
  background: #0052D9;
  padding-bottom: 32rpx;
  position: relative;
  z-index: 100;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

/* 搜索框容器 - 与首页保持一致的位置 */
.search-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  transform: translateY(50%);
  padding: 0 32rpx;
}

.search-navbar-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.back-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: 300;
  line-height: 1;
}

.search-icon {
  font-size: 32rpx;
  color: #0052D9;
}

.clear-icon {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 300;
  line-height: 1;
}

.search-container {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.search-box {
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 82, 217, 0.12);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  background: transparent;
  border: none;
  outline: none;
}

.search-clear {
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f1f5f9;
  transition: all 0.2s ease;
}

.search-clear:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

.navbar-right {
  display: flex;
  align-items: center;
}

.search-btn {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.search-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 主内容区 */
.main-content {
  flex: 1;
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

.bottom-spacer {
  height: 40rpx;
}

/* 搜索初始状态 */
.search-initial {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-link {
  font-size: 24rpx;
  color: #0052D9;
}

/* 搜索历史标签 */
.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background: #f8fafc;
  color: #64748b;
  font-size: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.history-tag:active {
  background: #e2e8f0;
  transform: scale(0.95);
}

/* 热门搜索标签 */
.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  background: linear-gradient(135deg, #0052D9 0%, #3385FF 100%);
  color: #fff;
  font-size: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
  transition: all 0.2s ease;
}

.hot-tag:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.3);
}

/* 搜索状态 */
.search-loading,
.search-empty,
.search-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon,
.error-icon {
  margin-bottom: 32rpx;
}

.empty-text,
.error-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.empty-desc,
.error-desc {
  font-size: 24rpx;
  color: #64748b;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 搜索结果 */
.search-results {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.results-count {
  font-size: 28rpx;
  color: #64748b;
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sort-label {
  font-size: 24rpx;
  color: #64748b;
}

.sort-tags {
  display: flex;
  gap: 8rpx;
}

.sort-tag {
  font-size: 24rpx;
  color: #64748b;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.sort-tag.active {
  background: #0052D9;
  color: #fff;
  border-color: #0052D9;
}

.sort-tag:active {
  transform: scale(0.95);
}

/* 物品列表 - 复用首页样式 */
.item-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.item-card {
  background: #fff;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  gap: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: box-shadow 0.3s;
}

.item-card:active {
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.12);
}

.item-image {
  width: 192rpx;
  height: 192rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, rgba(0, 82, 217, 0.1) 0%, rgba(51, 133, 255, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-image-sold {
  background: linear-gradient(135deg, rgba(248, 113, 113, 0.1) 0%, rgba(251, 146, 60, 0.1) 100%);
}

.item-image-img {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  object-fit: cover;
}

.item-image-text {
  font-size: 28rpx;
  color: #0052D9;
  text-align: center;
  padding: 0 16rpx;
}

.item-image-sold .item-image-text {
  color: #94a3b8;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.item-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  display: block;
}

.item-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.item-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052D9;
}

.item-price-sold {
  color: #94a3b8;
  text-decoration: line-through;
}

.item-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-stats-text {
  font-size: 24rpx;
  color: #94a3b8;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-footer-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-footer-text {
  font-size: 24rpx;
}

.item-link {
  font-size: 24rpx;
  color: #0052D9;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
}
