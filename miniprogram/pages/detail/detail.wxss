/**detail.wxss**/
page {
  background: #f7f9fc;
  height: 100%;
}

.page {
  min-height: 100%;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

/* 详情容器 */
.detail-container {
  padding-bottom: 160rpx;
}

/* 图片区域 */
.image-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 信息区域 */
.info-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price {
  font-size: 48rpx;
  font-weight: 600;
  color: #e34d59;
}

.status-tag {
  flex-shrink: 0;
}

.title-row {
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.meta-row {
  display: flex;
  gap: 32rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #64748b;
}

/* 通用区块 */
.section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

/* 描述区域 */
.description {
  line-height: 1.6;
}

.desc-text {
  font-size: 28rpx;
  color: #374151;
  word-break: break-all;
}

/* 交易信息 */
.trade-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.trade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.trade-label {
  font-size: 28rpx;
  color: #64748b;
}

.trade-value {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 卖家信息 */
.seller-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.seller-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.seller-desc {
  font-size: 24rpx;
  color: #64748b;
}

/* 底部占位 */
.bottom-spacer {
  height: 40rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f1f5f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.action-left {
  display: flex;
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-text {
  font-size: 20rpx;
  color: #64748b;
}

.action-right {
  flex: 1;
  max-width: 240rpx;
}
