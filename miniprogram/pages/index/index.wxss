/**index.wxss**/
page {
  background: linear-gradient(180deg, #ecf3ff 0%, #f7f9fc 60%, #eef1f7 100%);
  height: 100%;
}

.page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

/* 自定义导航栏 */
.custom-navbar {
  background: #0052D9;
  padding-bottom: 32rpx;
  position: relative;
  z-index: 100;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 48rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.location-text {
  color: #fff;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.navbar-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #fff;
  font-size: 28rpx;
}

/* 搜索框 */
.search-wrapper {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  transform: translateY(50%);
  padding: 0 32rpx;
}

.search-box {
  background: #fff;
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.12);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.search-btn {
  flex-shrink: 0;
}

/* 主内容区 */
.main-content {
  flex: 1;
  width: 100%;
  padding: 80rpx 32rpx 0;
  box-sizing: border-box;
}

.bottom-spacer {
  height: 40rpx;
}

/* 精选横幅 */
.featured-banner {
  background: linear-gradient(135deg, #0052D9 0%, #3385FF 100%);
  border-radius: 48rpx;
  padding: 40rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 24rpx 64rpx rgba(0, 82, 217, 0.16);
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.banner-left {
  flex: 1;
}

.banner-subtitle {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.banner-title {
  display: block;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.banner-desc {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  line-height: 1.6;
}

.banner-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.banner-tag {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
}

/* 通用区块 */
.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-link {
  font-size: 24rpx;
  color: #0052D9;
}

.section-date {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.category-item {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.category-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 82, 217, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-name {
  font-size: 24rpx;
  color: #1f2937;
}

/* 物品列表 */
.item-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.item-card {
  background: #fff;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  gap: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: box-shadow 0.3s;
}

.item-card:active {
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.12);
}

.item-image {
  width: 192rpx;
  height: 192rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, rgba(0, 82, 217, 0.1) 0%, rgba(51, 133, 255, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-image-sold {
  background: linear-gradient(135deg, rgba(248, 113, 113, 0.1) 0%, rgba(251, 146, 60, 0.1) 100%);
}

.item-image-text {
  font-size: 28rpx;
  color: #0052D9;
  text-align: center;
  padding: 0 16rpx;
}

.item-image-sold .item-image-text {
  color: #94a3b8;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.item-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  display: block;
}

.item-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.item-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052D9;
}

.item-price-sold {
  color: #94a3b8;
  text-decoration: line-through;
}

.item-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-stats-text {
  font-size: 24rpx;
  color: #94a3b8;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-footer-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-footer-text {
  font-size: 24rpx;
}

.item-link {
  font-size: 24rpx;
  color: #0052D9;
}

/* 订阅卡片 */
.subscription-card {
  background: #fff;
  border-radius: 48rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.subscription-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx 0;
}

.subscription-item:not(:last-child) {
  border-bottom: 1rpx solid #f1f5f9;
}

.subscription-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.subscription-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.subscription-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}

.subscription-switch {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subscription-status {
  font-size: 24rpx;
  color: #0052D9;
}

.subscription-link {
  font-size: 24rpx;
  color: #0052D9;
}

/* 公告卡片 */
.announcement-card {
  background: #fff;
  border-radius: 48rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.announcement-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx 0;
}

.announcement-item:not(:last-child) {
  border-bottom: 1rpx solid #f1f5f9;
}

.announcement-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.announcement-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.announcement-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 底部导航栏 */
.tabbar {
  background: #fff;
  border-top: 1rpx solid #f1f5f9;
  padding: 16rpx 0 calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.tabbar-text {
  font-size: 20rpx;
  color: #64748b;
}

.tabbar-text.active {
  color: #0052D9;
}

.tabbar-publish {
  position: absolute;
  top: -48rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.publish-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #0052D9;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.publish-btn:active {
  transform: scale(0.95);
}
