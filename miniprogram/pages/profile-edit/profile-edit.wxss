.register-page {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 32rpx;
  box-sizing: border-box;
}

.register-header {
  margin-bottom: 48rpx;
  padding: 0 16rpx;
}

.register-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.register-desc {
  font-size: 28rpx;
  color: #999;
}

.register-form {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx 0;
  overflow: hidden;
}

.avatar-section {
  display: flex;
  justify-content: center;
  padding-bottom: 48rpx;
}

.avatar-wrapper {
  position: relative;
  display: inline-block;
}

.avatar-edit-icon {
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}

.icon-camera-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.submit-btn {
  margin-top: 48rpx;
  padding: 0 32rpx 32rpx;
}
