.publish-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
}

.form-container {
  flex: 1;
  padding-bottom: 120rpx;
}

.form-section {
  margin-bottom: 24rpx;
  background: #ffffff;
  padding: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2129;
}

.title-required {
  color: #e34d59;
  font-size: 32rpx;
}

.title-tip {
  font-size: 24rpx;
  color: #86909c;
  margin-left: auto;
}

/* 图片上传 */
.image-upload {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d5dd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #f5f7fa;
}

.add-text {
  font-size: 24rpx;
  color: #0052d9;
}

/* 表单单元格 */
.form-cells {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.form-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  min-height: 88rpx;
}

.form-cell:not(:last-child) {
  border-bottom: 2rpx solid #f0f2f5;
}

.form-cell-column {
  flex-direction: column;
  align-items: flex-start;
}

.cell-label {
  display: flex;
  align-items: center;
  gap: 4rpx;
  flex-shrink: 0;
}

.label-text {
  font-size: 28rpx;
  color: #1d2129;
}

.label-required {
  color: #e34d59;
  font-size: 28rpx;
}

/* 表单输入 */
.cell-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #1d2129;
  min-width: 0;
}

.cell-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #1d2129;
  margin-top: 16rpx;
}

/* Picker 选择器 */
.cell-picker {
  flex: 1;
  min-width: 0;
}

.picker-value {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
  font-size: 28rpx;
  color: #1d2129;
}

.picker-value text {
  flex-shrink: 0;
}

.picker-value.placeholder {
  color: #c9cdd4;
}

.picker-value.placeholder text {
  color: #c9cdd4;
}

/* 价格输入 */
.price-input-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.price-symbol {
  font-size: 32rpx;
  font-weight: 600;
  color: #e34d59;
}

.price-input {
  flex: 1;
  text-align: right;
  font-size: 32rpx;
  font-weight: 600;
  color: #e34d59;
}

.price-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 16rpx 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #86909c;
}

.location-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 16rpx 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

/* 发布须知 */
.notice-card {
  padding: 24rpx;
  background: linear-gradient(135deg, #f0f7ff 0%, #e6f4ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #bae0ff;
}

.notice-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 16rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-item {
  font-size: 24rpx;
  color: #4e5969;
  line-height: 1.6;
}

/* 底部占位 */
.bottom-spacer {
  height: 40rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(15, 35, 95, 0.08);
  z-index: 100;
}

.bottom-bar .t-button {
  flex: 1;
}
