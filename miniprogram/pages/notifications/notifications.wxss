/**notifications.wxss**/
page {
  background: linear-gradient(180deg, #ecf3ff 0%, #f7f9fc 60%, #eef1f7 100%);
  height: 100%;
}

.page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

/* 自定义导航栏 */
.custom-navbar {
  background: #0052D9;
  padding-bottom: 50rpx;
  position: relative;
  z-index: 100;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.navbar-left,
.navbar-right {
  display: flex;
  align-items: center;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.navbar-title {
  flex: 1;
  text-align: center;
  position: relative;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -32rpx;
  background: #E34D59;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

.action-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.action-btn text {
  font-size: 24rpx;
  color: #fff;
}

/* 筛选标签 */
.filter-tabs {
  background: #fff;
  margin: 24rpx;
  border-radius: 32rpx;
  padding: 16rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.filter-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  color: #64748b;
  font-size: 24rpx;
  transition: all 0.2s ease;
  position: relative;
}

.filter-tab.active {
  background: #0052D9;
  color: #fff;
  border-color: #0052D9;
}

.filter-tab:active {
  transform: scale(0.95);
}

.tab-count {
  background: #E34D59;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 1;
}

/* 主内容区 */
.main-content {
  flex: 1;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
}

.empty-desc {
  font-size: 24rpx;
  color: #64748b;
}

/* 通知列表 */
.notification-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 24rpx;
}

.notification-item {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
}

.notification-item.unread {
  background: linear-gradient(135deg, rgba(0, 82, 217, 0.05) 0%, rgba(51, 133, 255, 0.05) 100%);
  border-left: 6rpx solid #0052D9;
}

.notification-item:active {
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.12);
  transform: translateY(-2rpx);
}

.notification-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(0, 82, 217, 0.1) 0%, rgba(51, 133, 255, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.notification-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.notification-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.notification-time {
  font-size: 20rpx;
  color: #94a3b8;
  white-space: nowrap;
}

.notification-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.notification-item {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #1f2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 24rpx;
  font-weight: 600;
  color: #0052D9;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.actor-name {
  font-size: 20rpx;
  color: #64748b;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #E34D59;
  border-radius: 50%;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
}

.no-more {
  font-size: 24rpx;
  color: #94a3b8;
}

.bottom-spacer {
  height: 40rpx;
}
